    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less
    ; pager = tig
    ; pager = cat
[alias]
    s = !tig status
    st = status
    ci = commit
    br = branch
    co = checkout
    df = !git diff | tig
    dfs = !git diff --staged | tig
    lg = log -p
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    rmc = rm --cached
    rbc = rebase --continue
    rba = rebase --abort
